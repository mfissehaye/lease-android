<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/survey_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/grey_70"
            android:text="Survey Title" />

        <TextView android:id="@+id/survey_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mdtp_dark_gray"
            android:layout_marginTop="@dimen/default_padding"
            android:textSize="14sp"
            android:text="Short description of the survey." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/default_padding">

            <TextView
                android:id="@+id/questions_languages_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/grey"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/continue_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="@string/continue_survey"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:layout_gravity="end"
                android:visibility="invisible"
                android:gravity="end"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_below="@id/container"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>