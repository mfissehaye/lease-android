<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/complete_exam_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete_exam"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_background_red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blueBlack"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:visibility="gone" />

    <TextView
        android:id="@+id/show_explanation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_explanation"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_background_red"
        android:visibility="invisible" />

</RelativeLayout>